
footer
    border-top: 1px solid #e5e5e5
    a, p
        color: #999
    a:hover
        color: #444
    #footer-inner
        padding: 30px 30px 20px 30px
        .group
            display: flex
            .footer-mod
                width: 25%
                margin-bottom: 20px
                .extra-links
                    column-count: 3
                    max-width: 280px
                    li
                        a
                            display: block
                            font-size: 13px
                            padding: 5px 0
                h3
                    padding: 2px 0 13px 0
                .footer-logo
                    width: 80px
                    height: 20px
                    a
                        &:hover
                            opacity: 0.8
                        display: block
                        width: 80px
                        height: 20px
                .logan
                    margin-top: 10px
                    font-size: 14px
                .about
                    font-size: 13px
                    max-width: 300px
                    margin-top: 10px
                    padding: 0 50px 10px 0
                    word-spacing: 2px
                    line-height: 1.6
            .jobs-list
                li.group
                    padding-bottom: 15px
                    a
                        display: block
                        &:first-child
                            margin-right: 10px
                            width: 30px
                            height: 30px
                        &:last-child
                            &:hover
                                opacity: 0.8
                            p
                                font-size: 14px
                                color: #3a8bbb
                            color: #777
                            font-size: 12px
                            width: 300px
                            line-height: 1.3
                        img
                            border-radius: 50%
            .thedeck
                margin-top: 6px
                .tooltipstered
                    width: 120px
                    &:hover
                        img
                            opacity: 0.8
                .deck-content
                    margin-left: 20px
                    p
                        max-width: 300px
                        margin-top: 5px
                        font-size: 13px
                        line-height: 1.5
                        a
                            font-weight: bold
                            color: black
                            &:hover
                                color: #777
        h4#pixels
            float: right
            width: 25%
            line-height: 1.4
            background: url(../img/ball.png) no-repeat 0 50%
            min-height: 56px
            padding-left: 54px
            box-sizing: border-box
            margin-bottom: 20px
            strong
                font-size: 21px
                color: #333
                font-weight: bold
            p
                display: block
                width: 150px
        .copyright
            font-size: 13px
            margin-bottom: 10px
            line-height: 1.6
        .follow
            margin-bottom: 10px
            a
                margin-right: 10px
                display: inline-block
                height: 30px
                &:hover
                    i
                        color: #333
                i
                    font-size: 30px

@media (max-width: 1100px)
    .group
        .footer-mod
            .extra-links
                column-count: 2 !important

@media (max-width: 810px)
    .group
        flex-direction: column
        .footer-mod
            width: auto !important
            .jobs-list
                li
                    flex-direction: row !important
            .thedeck
                flex-direction: row !important
            .extra-links
                max-width: none !important
                column-count: 3 !important
    #pixels
        float: none !important

@media (max-width: 400px)
    #footer-inner
        padding: 20px 15px !important
        .group
            .footer-mod
                .extra-links
                    column-count: 2 !important
