
.content
    position: relative
    z-index: 2
    background: white
    margin-bottom: 400px
    article
        padding: 100px 0
        max-width: 640px
        margin: 0 auto
        text-align: center
        line-height: 1.6
        hr
            margin: 30px 0
            border-color: rgba(156, 39, 176, 0.18)
            background: rgba(156, 39, 176, 0.18)

// Model Grid
.clothes-pics
    margin-bottom: 100px
    .row
        display: flex
        figure
            margin: 20px
            position: relative
            opacity: 0
            transform: translateX(-20px)
            transition: all 0.5s ease
            overflow: hidden
            cursor: pointer

            &.is-showing
                opacity: 1
                transform: translateX(0px)
            img
                display: block
                transition: all 0.5s ease
                transform: scale(1)
            &:hover
                figcaption
                    left: 0%
                img
                    transform: scale(1.1)
        figcaption
            position: absolute
            bottom: 0
            left: -100%
            background: black
            color: white
            padding: 2px 8px
            font-size: 11px
            transition: all 0.3s ease

.large-window
    height: 640px
    margin-top: 100px
    margin-bottom: 100px
    border-radius: 50%
    background: url(../img/model2.jpg) center 0px repeat-y fixed
    position: relative

    .window-tint
        background: rgba(0,0,0,0.5)
        position: absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        border-radius: 50%
        display: flex
        justify-content: center
        align-items: center
        opacity: 0
    .promo-text
        color: white
        font-weight: 100
        font-size: 50px
        line-height: 1.2
        strong
            display: block
            font-size: 30px

        span
            font-weight: 300
            font-size: 18px
            font-style: italic
            color: rgba(255,255,255,0.6)

        .window-cta
            font-size: 20px
            text-decoration: none
            color: white
            border: 1px solid white
            padding: 10px 20px
            transition: all 0.3s ease
            &:hover
                background: white
                color: black

// posts

.blog-posts
    margin-top: 100px
    .post
        border: 1px solid #e1e1e1
        padding: 20px 20px 0
        background: white
        position: relative
    .post-1
        transform: translate(100px, 20px)
    .post-2
        z-index: 2
    .post-3
        transform: translate(-100px, 20px)
