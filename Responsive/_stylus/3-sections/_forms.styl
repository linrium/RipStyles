form
    max-width: 450px
    margin: 0 auto 50px
    input, textarea
        border: 3px solid $accent
        width: 100%
        padding: 10px
        box-sizing: border-box
        &:focus
            outline: none
            border-color: $accent-light
    .submit-wrap
        text-align: right
    [type='submit']
        background: $accent
        color: white
        font-size: 18px
        text-transform: uppercase
        width: 33%
        cursor: pointer
        &:hover
            background: $accent-light

    textarea
        height: 10em

    .contact-info-group
        label
            width: 50%
            box-sizing: border-box
            float: left
            &:nth-child(1)
                padding-right: 5px
            &:nth-child(2)
                padding-left: 5px
    label
        display: block
        margin-bottom: 20px
        span
            display: block
            margin-bottom: 5px
