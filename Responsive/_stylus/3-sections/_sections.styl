h3
    @extend $small-bold
    color: $accent-light
    text-align: center
    padding: 100px 0 32px 0
.face-lockup
    max-width: 780px
    display: flex
    margin: 0 auto
    align-items: center
    justify-content: space-around

    .face-img
        width: 200px
        height: 200px
        background: url(../img/face.png)
        order: 3

    [class^='icon-']
        width: 100px
        height: 100px
        background: $bg-color
        border-radius: 50%
        svg
            width: @width
            height: @height
        path
            fill: $accent
        &.icon-pencil
            order: 1
        &.icon-mouse
            order: 2
        &.icon-browser
            order: 3
        &.icon-video
            order: 4

@media screen and (max-width: 650px)
    .face-lockup
        display: block
        text-align: center

        div
            display: inline-block

        .face-img
            display: block
            background-position: center center
            background-repeat: no-repeat
            width: auto
            margin-bottom: 30px

        [class^='icon-']
            margin: 10px

.blurb
    max-width: 620px
    padding: 0 15px
    margin: 50px auto
    font-size: 24px
    text-align: center
    font-weight: 300
    strong
        font-weight: bold

.skill-lockup
    max-width: 700px
    margin: 150px auto
    color: #999
    // clearfix()
    display: flex
    flex-wrap: wrap
    justify-content: space-between

    .skill-unit
        width: 350px
        // float: left

    .skill-icons
        margin: 2px 0 30px 0
        span
            display: inline-block
            width: 14px
            height: 14px
            background-color: $accent
            margin-right: 5px
            border-radius: 50%

            &:after
                content: ""
                display: block
                height: 10px
                width: 10px
                background: white
                border-radius: 50%
                margin: 2px
        for $i in (1..10)
            &.skill-{$i} span:nth-child(n+{$i})
                @extend $skill-color

@media screen and (max-width: 700px)
    .skill-lockup
        width: 270px
